{% extends 'layout.njk' %}

{% block content %}

    <form class="" method="POST" action="/selecionaPalestra">

        <div id="wrapper">
            <h1>Selecione as Palestras...</h1>
        </div>

        <section class="cards">
            {% for palestra in palestras %}

                <div class="card" id="{{ palestra.id }}">
                    <div class="card__content">
                        <p>{{ palestra.titulo }}</p>
                    </div>
                    <div class="card__info">
                        <p class="card__palestrante">Palestrante</p>
                        <p class="card__palestrante">{{ palestra.palestrante }}</p>
                        <p class="card__horario">Hor√°rio</p>
                        <p class="card__horario">{{ palestra.horario }}</p>
                        </div>
                        <label class="form-check-label"><input style="align-content:flex-start" type="checkbox" name="{{ palestra.id }}" value="{{ palestra.id }}">
                    </div>
                {% endfor %}

            </section>
            <button type="submit">Escolher Palestras</button>
            <script>
                $("input[type='checkbox']:checked")
            </script>

        {% endblock content %}