{% extends 'layout.njk' %}

{% block content %}
    <form class="card" method="POST" action="/cadastro">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/9548716/700x700) no-repeat center center / cover"></section>

        <section class="details" style="">
            <h3>Novo Cadastro</h3>

            <div class="item">
                <div>CPF</div>
                <div>
                    <input id="cpf" type="text" name="id" placeholder="Insira o CPF..." pattern="[0-9]{3}\.[0-9]{3}\.[0-9]{3}-[0-9]{2}" onchange="formataCPF(this)">
                </div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>
                    <input type="text" name="nome" placeholder="Insira o nome...">
                </div>
            </div>

            <div class="item">
                <div>Cidade</div>
                <div>
                    <input type="text" name="cidade" placeholder="Insira a cidade...">
                </div>
            </div>

            <div class="item">
                <div>Estado</div>
                <div>
                    <input type="text" name="estado" placeholder="Insira o estado...">
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="data_nascimento">
                </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="sexo" value="M" checked>Masculino</span>
                    <span><input type="radio" name="sexo" value="F">Feminino</span>
                </div>
            </div>

            <button type="submit">Salvar</button>
        </section>     
    <script>
        $('#cpf').mask('000.000.000-00', {reverse: true});
    </script>
    </form>
{% endblock content %}